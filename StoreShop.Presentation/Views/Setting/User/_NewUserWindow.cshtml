@model StoreShop.Data.UserModel

<script>
    $(function () {
        $("#btnSaveUser").click(saveUser);
    })
</script>
<script scr="~/js/Framework.utils.js"></script>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!----------------------------------------Modal header------------------------------------------------------->
            <div class="modal-header">
                <h5 class="modal-title" id="modaltitle">New User</h5>
                <button id="btnclose" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!----- ------------------------------------------Modal body-------------------------------------------- ---------------------------->
            <div class="modal-body col-lg-12">
                @Html.HiddenFor(m => m.UserId)
                <div class=" form-group row">
                    <label class="col-lg-5">User Name<span style="color:red">*</span>:</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "true" })
                        <span style="color:red"> @Html.ValidationMessageFor(m => m.UserName)</span>
                    </div>
                </div>

                <div class=" form-group row">
                    <label class="col-lg-5">First Name<span style="color:red">*</span>:</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = "true" })
                        <span style="color:red"> @Html.ValidationMessageFor(m => m.FirstName)</span>
                    </div>
                </div>

                <div class=" form-group row">
                    <label class="col-lg-5">Last Name<span style="color:red">*</span>:</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = "true" })
                        <span style="color:red"> @Html.ValidationMessageFor(m => m.LastName)</span>
                    </div>
                </div>

                <div class=" form-group row">
                    <label class="col-lg-5">Phone No.<span style="color:red">*</span>:</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.CellNo, new { @class = "form-control", @required = "true" })
                        <span style="color:red"> @Html.ValidationMessageFor(m => m.CellNo)</span>
                    </div>
                </div>

                <div class=" form-group row">
                    <label class="col-lg-5">Password<span style="color:red">*</span>:</label>
                    <div class="col-lg-7">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @required = "true" ,@type="password"})
                        <span style="color:red"> @Html.ValidationMessageFor(m => m.UserName)</span>
                    </div>
                </div>

                <!-----------------------------------------Modal Footer----------------------------------------------------->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="btnSaveUser">Save</button>
                </div>

            </div>
        </div>
    </div>
</div>

