@model List<StoreShop.Data.BrandModel>


    <div class="font-weight-bold">Records: <span class="text-info"> @Model.Count()</span></div>
    <div class="overflow-auto" style="max-height:200px; min-height:200px;">

        <table class="table table-bordered table-striped table-hover" style="max-height:200px;">
            <thead>
                <tr>
                    <th>Brand Name</th>
                    <th>Store Location</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr class="form-group">
                            <td>@item.BrandName</td>
                            <td> </td>
                            <td>
                                <a href="javascript:void(0)" title="Edit" onclick="showBrandWindow(@item.BrandId)"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            </td>
                            <td>
                                <a href="javascript:void(0)" title="Delete" onclick="deleteBrand(@item.BrandId)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        </div>
