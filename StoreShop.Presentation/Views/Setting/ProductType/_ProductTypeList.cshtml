@model List<StoreShop.Data.ProductTypeModel>

<div class="font-weight-bold">Records: <span class="text-info"> @Model.Count()</span></div>

<div class="overflow-auto " style="max-height:200px;min-height: 200px;">

    <table class="table table-bordered table-striped table-hover" style="max-height:200px;">
        <tr>
            <th>Product Type name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductTypeName</td>
                    <td>
                        <a href="javascript:void(0)" onclick="showProductTypeWindow(@item.ProductTypeId)" title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    </td>
                    <td>
                        <a href="javascript:void(0)" onclick="deleteProductType(@item.ProductTypeId)" title="Delete"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
