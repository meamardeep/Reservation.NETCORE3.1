<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreShop</title>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="~/js/Framework.utils.js"></script>
    <script src="~/js/User.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


    <!-----------------Fon awesome-------------------------->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    </environment>
    <!----------------Font awesome end here----------------->
   
    
    <!-----------------sweet alert reference start here----------------->
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert.css"/>
    <script src="~/lib/sweetalert/sweetalert.js"></script>
    <!-------------------sweet alert reference ends here------------------->

    
    <script src="~/lib/toaster/jquery.toaster.js"></script>

    <!--------------Chart.js-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    @*<link rel="stylesheet" type="text/css" href="path/to/chartjs/dist/Chart.min.css">*@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3 d-flex justify-content-between">
                <div>
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                        @{

                            if (SessionManager.CustomerName != null && SessionManager.CustomerName != "")
                            {
                                <span>@SessionManager.CustomerName</span>
                            }
                        }

                    </a>
                </div>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">*@
                <div class="d-flex justify-content-start">
                    @*<ul class="navbar-nav flex-grow-1">*@
                    <ul>
                        @*<li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@

                        @{
                            if (SessionManager.UserName != null && SessionManager.UserName != "")
                            {
                                var path = SessionManager.UserProfilePhotoPath;
                                <li class="@*nav-item*@ form-inline dropdown">
                                    @if (path == null || path == "")
                                    {
                                        <img class="nav-link text-white rounded-circle" src="~/img/AdminSettingPage.png" width="50" height="50" />

                                    }
                                    else
                                    {
                                        <img class="nav-link text-white rounded-circle" src="~/img/ProfilePhoto/@path" width="69" height="50" />

                                    }
                                    <span class="dropdown-toggle text-white" id="dropdownMenuLink" data-toggle="dropdown"></span>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item modal-header" asp-controller="User" asp-action="GetUserProfile">Signed as &nbsp;<span class="font-weight-bold">  @SessionManager.FirstName</span></a>
                                        <a class="dropdown-item" asp-controller="User" asp-action="GetUserProfile"><i class="fa fa-user-circle"></i> Your Profile</a>
                                        <a class="dropdown-item" asp-controller="Setting" asp-action="Index"><i class="fa fa-cog"></i> Setting</a>
                                        <a class="dropdown-item " asp-action="Logout" asp-controller="Account">Sign Out</a>
                                    </div>
                                </li>
                            }

                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white float-xl-right" asp-area="" asp-controller="Account" asp-action="index">Login</a>
                                </li>

                            }

                        }

                    </ul>
                </div>
            
        </nav>
    </header>

    <aside>
    </aside>
    <section class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </section>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - StoreShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
