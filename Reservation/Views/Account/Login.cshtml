@model Reservation.Data.LogOnModel

<div class="border shadow rounded-lg container  align-items-center mt-5">

    
    @using (Html.BeginForm("LogOn", "Account", FormMethod.Post))
    {
        <div class="form-group pl-5">
            <h4>Login</h4>
        </div>

        <div class="form-group pl-5 pr-5 ">          
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "true", @placeholder = "User name/ Email" })
                <span style="color:red"> @Html.ValidationMessageFor(m => m.UserName)</span>           
        </div>


        <div class="form-group pl-5 pr-5">            
                <span><a class="float-right" asp-action="showForgotPassword" asp-controller="account">Forgot password?</a></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "true", @placeholder = "Password" })
                <span style="color:red">@Html.ValidationMessageFor(m => m.Password)</span>          
        </div>


        <div class="form-group pl-5 pr-5">
            <button type="submit" id="btnLogIn" class="btn btn-primary form-control" style="width:100%;">Login</button>
            @*@Html.CheckBoxFor(m => m.RememberMe)*@
            <span>Remember me</span>
            <div class="text-center">
                <a id="" asp-action="OTPLoginPage" asp-controller="account" style="text-decoration : none">Sign with verification code</a>
            </div>
        </div>
       

    }
</div>

<div class="justify-content-center text-center mt-2">
    <span>Do not have an account? <a asp-action="ShowSignUpPage" asp-controller="account" style="text-decoration:none">Sign Up</a> </span>

</div>



 